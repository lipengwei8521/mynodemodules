var fs = require('fs');

module.exports={
	login:function(path,recall){
		fs.readFile(path,function(err,data){
			if(err){
				console.log(err);
				recall('读取文件发生错误！');
			}else{
				recall(data);
			}
		});
	},
	showimg:function(path,res){
		fs.readFile(path,'binary',function(err,filedata){
		if(err){
			//throw err.toString();
			console.log('err');
			return;
		}else{
			res.write(filedata,'binary');
			res.end('');
		}
		
		});
	}

}